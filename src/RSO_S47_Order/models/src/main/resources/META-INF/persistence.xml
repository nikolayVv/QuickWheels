<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="orders-jpa" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/OrdersDS</non-jta-data-source>

        <class>si.fri.rso.samples.orders.models.entities.OrderStatusEntity</class>
        <class>si.fri.rso.samples.orders.models.entities.OrderProductEntity</class>
        <class>si.fri.rso.samples.orders.models.entities.OrderEntity</class>
        <class>si.fri.rso.samples.orders.models.converters.InstantAtributeConverter</class>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.sql-load-script-source"
                      value="sql-scripts/init.sql" />
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
        </properties>
    </persistence-unit>
</persistence>
